<!-- Launch file to launch all the cameras at once -->

<launch>

    <node pkg="tf2_ros" type="static_transform_publisher" name="camera_base" args="-0.0 0 -0.105 -0.07 -0.02 0 /wamv/lidar_wamv_front_link wamv/camera_base" /> 
    
    <node pkg="tf2_ros" type="static_transform_publisher" name="left_cam_tf" args="0 0.0 0 1.04 0 0 /wamv/camera_base camera_left_z" /> 
    <node pkg="tf2_ros" type="static_transform_publisher" name="left_cam_tf_optical" args="0.115 0.0 0 -1.5707 0 -1.5707 camera_left_z camera_left" /> 

    <node pkg="tf2_ros" type="static_transform_publisher" name="center_cam_tf" args="00 0 0 0.03 0 0 /wamv/camera_base camera_center_z" /> 
    <node pkg="tf2_ros" type="static_transform_publisher" name="center_cam_tf_optical" args="0.115 0.0 0 -1.5707 0 -1.5707 camera_center_z camera_centre" /> 


    <node pkg="tf2_ros" type="static_transform_publisher" name="right_cam_tf" args="0 0 0 -1.04 0 0 /wamv/camera_base camera_right_z"/> 
    <node pkg="tf2_ros" type="static_transform_publisher" name="right_cam_tf_optical" args="0.115 0.0 0 -1.5707 0 -1.5707 camera_right_z camera_right" /> 



</launch>
